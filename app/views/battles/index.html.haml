.container
  .row.justify-content-center
    .col-12.text-center
      %h1.text-primary Battle History
      %p.text-muted= "View all battles and their results below."

  .row.justify-content-center.mt-4
    .col-12
      %ul.list-group
        - @battles.each do |battle|
          %li.list-group-item.d-flex.justify-content-between.align-items-center
            .d-flex.flex-column
              %strong Battle ID: #{battle.id}
              %small.text-muted= "Created At: #{battle.created_at.strftime("%Y-%m-%d %H:%M:%S")}"
            .d-flex.align-items-center
              - if battle.fighters.any? { |fighter| fighter.winner }
                - winner = battle.fighters.find { |fighter| fighter.winner }.character
                %span.badge.bg-success.me-2 Winner: #{winner.name}
              - else
                %span.badge.bg-danger.me-2 No Winner Yet
              = link_to "View", battle_path(battle), class: "btn btn-sm btn-primary"
