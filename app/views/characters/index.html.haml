.container-fluid.p-0.p-md-3
  .row.justify-content-center.mt-3.mb-5
    .col-12.text-center
      %h1 🛡️ Character List 🗡️

  .row.justify-content-center
    .col-12
      %ul.list-group.mb-4
        - @characters.each do |character|
          %li.list-group-item.d-flex.justify-content-between.align-items-center
            .d-flex.align-items-center
              - if character.avatar.attached?
                %img{ src: url_for(character.avatar), alt: "Avatar", class: "img-thumbnail me-3", style: "max-width: 50px;" }
              - else
                %span.badge.bg-secondary.me-3 No Avatar
              %div
                %h5.mb-0= character.name
                %small.text-muted ⚔️ Attack: #{character.attack_points} | 💖 Health: #{character.health}
            .d-flex.align-items-center
              = link_to "View", character_path(character), class: "btn btn-sm btn-primary me-2"
              = link_to "Edit", edit_character_path(character), class: "btn btn-sm btn-warning me-2"
              = link_to "Delete", character_path(character), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger"

  .row.justify-content-center
    .col-12.text-center
      = link_to "⚡ Add Your Hero", new_character_path, class: "btn btn-success btn-lg"
